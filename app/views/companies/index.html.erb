<%- model_class = Company -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<%= will_paginate @companies, renderer: BootstrapPagination::Rails %>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:logo_url) %></th>
      <th><%= model_class.human_attribute_name(:website_url) %></th>
      <th><%= model_class.human_attribute_name(:short_pitch) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>

    </tr>
  </thead>
  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%=  company.id %></td>
        <td><%= company.name %></td>
        <td><%= company.description %></td>
        <td><%= company.logo_url %></td>
        <td><%= company.website_url %></td>
        <td><%= company.short_pitch %></td>
        <td><%=l company.created_at %></td>

      </tr>
    <% end %>
  </tbody>
</table>
