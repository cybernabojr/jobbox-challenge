<%- model_class = Company -%>
<div class="main-row">
  <%= will_paginate @companies, renderer: BootstrapPagination::Rails %>
  <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
    <% @companies.each do |c| %>
    <div class="panel">
      <div class="panel-heading" role="tab" id="heading<%=c.id%>">
        <table class="table">
          <tr>
            <td width="20%">
            <%=link_to image_tag(c.logo_url, :border => 0, :alt => 'Logo', :title => ''), c.website_url, :id => 'invisible_link' %>            </td>
            <td width="60%">
              <h1 class="">
              <%=c.name %>
              </h1>
              <br>
              <p> <%= c.short_pitch %> </p>
            </td>
            <td width="20%">
            </td>
            <td>
              <a id ="invisible_link" data-toggle="collapse" data-parent="#accordion" href="#collapse<%=c.id%>" aria-expanded="false" aria-controls="collapse<%=c.id%>">
                <%=fa_icon "caret-square-o-down 5x", class: "fa-mod"  %>
              </a>
            </td>
          </tr>
        </table>
      </div>
      <div id="collapse<%=c.id%>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading<%=c.id%>">
        <div class="panel-body">
          <table class="table">
            <thead>
              <tr>
                <th><%= model_class.human_attribute_name(:description) %></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= c.description %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
